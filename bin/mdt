#!/usr/bin/env python3

"""Prompt user for the Daily 3.
Thanks to /u/laconicpleonasm on /r/Mydaily3
"""

from datetime import date

OUT_DIR = "/Users/bobgardner/Documents/me/"
OUT_FILE = "my-daily-three.md"


def main():
    print("Daily journal entry of just three bullet points.")
    daily_three = ["- " + input("- ") + "\n" for x in range(3)]
    with open(OUT_DIR + OUT_FILE, 'a') as f:
        f.write("\n## %s\n" % (date.today()))
        [f.write(entry) for entry in daily_three]
    print("saved to %s" % (OUT_DIR + OUT_FILE))


if __name__ == '__main__':
    main()
