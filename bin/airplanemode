#!/usr/bin/env bash
# airplanemode: power off network and kill Internet-only daemons

# The programs to terminate.
declare -a programs=("Caffeine" "Dropbox" "Google Drive")

# Power off bluetooth.
blueutil off

# Power off Wi-Fi.
networksetup -setairportpower en off

# Terminate Internet-only programs.
for program in "${programs[@]}"; do
  echo "Killing $program" "..."
  pkill "$program"
done
