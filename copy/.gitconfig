[user]
	name = Robert Gardner
	email = rhg259@nyu.edu
[core]
  autoclrf = input
  editor = vim
  excludesfile = ~/.gitignore_global
  whitespace = fix,space-before-tab,tab-in-indent,trailing-space
[color]
  branch = auto
  diff = auto
  status = auto
  ui = true
[apply]
  whitespace = fix
[color "status"]
  added = green bold
  changed = cyan bold
  untracked = yellow bold
[color "branch"]
  current = cyan bold
  local = yellow
  remote = green
[alias]
  a = add
  aa = add --all :/
  alias = config --get-regexp alias
  b = branch -avv
  bd = branch -d
  bm = branch -m
  br = branch
  ci = commit
  cia = commit --amend
  co = checkout
  com = checkout master
  diffc = diff --cached
  discard = checkout HEAD --
  g = grep -I
  ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
  ini = "!f(){ git init && git add --all :/ && git commit -m 'Initial commit'; };f"
  last = log -1 HEAD
  lg = log --oneline --decorate --graph
  m = merge
  pp = !"echo 'Pull'; git pull; echo 'Push'; git push"
  s = status -sb
  st = status
  sshow = "!f() { git stash show stash^{/$*} -p }; f"
  sapply = "!f() { git stash apply stash^{/$*}; }; f"
  t = tag
  td = tag -d
  undo-soft = reset --soft HEAD^
  undo-hard = reset --hard HEAD^
  unstage = reset HEAD --
  up = push origin
  wdiff = diff --word-diff=color --unified=1
[diff "pandoc"]
  textconv=pandoc --to=markdown
  prompt = false
[heroku]
  account = personal
[push]
  default = current
[rebase]
  autosquash = true
[mergetool]
  keepBackup = true
[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f
[credential]
  helper = osxkeychain
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
